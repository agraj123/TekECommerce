<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/wishlist_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/tv" />

        <TextView
            android:id="@+id/wishlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="p_name"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wishlist_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="amount" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="2dp"
                android:text="@string/rs_wishlist"
                android:textColor="@color/black"
                android:textSize="11sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:paddingTop="3dp">

            <TextView
                android:id="@+id/wishlist_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:text="add to cart"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/wishlist_save"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignEnd="@id/wishlist_cart"
                android:layout_centerVertical="true"
                android:layout_marginEnd="-30dp"
                android:src="@drawable/filled_save_foreground" />
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>